# Tauri Environment Variables
# Copy this file to .env and fill in your values

# ==========================================
# Auto-Updater Configuration
# ==========================================
UPDATE_URL=https://github.com/Raudbjorn/MDMAI/releases/latest/download/latest.json
TAURI_STRONGHOLD_PASSWORD=your-stronghold-password

# ==========================================
# Code Signing - Universal
# ==========================================
TAURI_SIGNING_PRIVATE_KEY=path/to/tauri-private-key
TAURI_SIGNING_PRIVATE_KEY_PASSWORD=your-private-key-password
TAURI_SIGNING_PUBLIC_KEY=your-public-key-here

# ==========================================
# Windows Code Signing
# ==========================================
WINDOWS_CERTIFICATE_PATH=path/to/your/certificate.p12
WINDOWS_CERTIFICATE_PASSWORD=your-certificate-password

# ==========================================
# macOS Code Signing
# ==========================================
MACOS_SIGNING_IDENTITY=Developer ID Application: Your Name (TEAM_ID)
APPLE_ID=your-apple-id@example.com
APPLE_PASSWORD=your-app-specific-password
APPLE_TEAM_ID=YOUR_TEAM_ID
ASC_PROVIDER=your-asc-provider  # Optional

# ==========================================
# Linux Code Signing
# ==========================================
GPG_KEY_ID=your-gpg-key-id
GPG_PASSPHRASE=your-gpg-passphrase

# ==========================================
# GitHub Integration
# ==========================================
GITHUB_TOKEN=your-github-token  # For release automation

# ==========================================
# Build Environment
# ==========================================
RUST_BACKTRACE=1
TAURI_DEBUG=false
NODE_ENV=production

# ==========================================
# CI/CD Variables (GitHub Actions)
# ==========================================
# These are typically set in GitHub Secrets, not in .env files
# CI=true
# GITHUB_REPOSITORY=Raudbjorn/MDMAI
# GITHUB_REF=refs/heads/main
# GITHUB_SHA=commit-hash

# ==========================================
# Development Overrides
# ==========================================
# Uncomment for development/testing
# TAURI_SKIP_UPDATE_CHECK=true
# TAURI_MOCK_UPDATER=true
# TAURI_DEV_SERVER_URL=http://localhost:5173