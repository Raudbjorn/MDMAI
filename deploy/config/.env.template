# TTRPG Assistant MCP Server Configuration Template
# Copy this file to .env and customize for your installation

# General Settings
MCP_SERVER_NAME=TTRPG Assistant
DEBUG=false
TESTING=false
LOG_LEVEL=INFO
LOG_FILE=/var/log/ttrpg-assistant/ttrpg-assistant.log

# Database Configuration
CHROMA_DB_PATH=/var/lib/ttrpg-assistant/chromadb
CHROMA_COLLECTION_PREFIX=ttrpg_
CHROMA_DB_IMPL=duckdb+parquet

# PDF Processing
MAX_CHUNK_SIZE=1000
CHUNK_OVERLAP=200
ENABLE_ADAPTIVE_LEARNING=true

# Search Configuration
DEFAULT_SEARCH_RESULTS=5
ENABLE_HYBRID_SEARCH=true
SEMANTIC_WEIGHT=0.7
KEYWORD_WEIGHT=0.3

# Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32

# Cache Configuration
CACHE_DIR=/var/lib/ttrpg-assistant/cache
CACHE_TTL_SECONDS=3600
SEARCH_CACHE_SIZE=1000
CACHE_MAX_MEMORY_MB=100

# MCP Server Settings
MCP_STDIO_MODE=true

# Security Settings
ENABLE_AUTHENTICATION=false
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT=true
ENABLE_INPUT_VALIDATION=true
SESSION_TIMEOUT_MINUTES=60
AUDIT_RETENTION_DAYS=90
SECURITY_LOG_FILE=/var/log/ttrpg-assistant/security.log

# Performance Settings
MAX_WORKERS=4
REQUEST_TIMEOUT_SECONDS=300
CONNECTION_POOL_SIZE=10

# GPU Settings (optional)
ENABLE_GPU=false
GPU_TYPE=auto  # auto, cuda, rocm, cpu

# Network Settings (for API mode)
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
CORS_ENABLED=true
CORS_ORIGINS=*

# Backup Settings
BACKUP_DIR=/var/lib/ttrpg-assistant/backup
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=false
AUTO_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Export/Import Settings
EXPORT_DIR=/var/lib/ttrpg-assistant/export
ALLOWED_EXPORT_FORMATS=json,csv,yaml
MAX_EXPORT_SIZE_MB=100

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_INTERVAL_SECONDS=60

# Feature Flags
ENABLE_CAMPAIGN_MANAGEMENT=true
ENABLE_CHARACTER_GENERATION=true
ENABLE_PERSONALITY_SYSTEM=true
ENABLE_SOURCE_MANAGEMENT=true
ENABLE_SESSION_TRACKING=true

# External Services (optional)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=
# HUGGINGFACE_API_KEY=

# Development Settings (do not use in production)
# HOT_RELOAD=false
# PROFILE_ENABLED=false
# SQL_ECHO=false